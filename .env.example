# Project Kor'tana Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT COMMIT .env files to version control

# Application Settings
APP_NAME=kortana
LOG_LEVEL=INFO
DEFAULT_GREETING="hello from kor'tana"

# Database Configuration
MEMORY_DB_URL=sqlite:///./kortana_memory_dev.db

# API Keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# Legacy API Keys (for backward compatibility)
OPENAI_ORG_ID=org-your-organization-id-here

# Google/Gemini Configuration
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_PROJECT_ID=your-google-project-id-here

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-v1-your-openrouter-api-key-here

# xAI Configuration
XAI_API_KEY=xai-your-xai-api-key-here

# Anthropic Configuration
SK_ANT_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=your-pinecone-environment-here

# Database Configuration (for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kortana
DB_USER=your-db-user
DB_PASSWORD=your-db-password

# Monitoring & Analytics (optional)
METRICS_ENDPOINT=https://your-metrics-endpoint.com
SENTRY_DSN=https://your-sentry-dsn-here

# Vector Store Configuration
VECTOR_STORE=chroma
CHROMA_HOST=localhost
CHROMA_PORT=8000

# Security (for production)
SECRET_KEY=your-secret-key-for-jwt-tokens
JWT_ALGORITHM=HS256

# External Services (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Development Settings
DEBUG=true
LOG_LEVEL=INFO
PYTHONPATH=./src
