{
    // Core Python configuration
    "python.defaultInterpreterPath": "c:\\\\kortana\\\\.kortana_config_test_env\\\\Scripts\\\\python.exe",
    "python.terminal.activateEnvironment": false,
    "python.terminal.activateEnvInCurrentTerminal": false,
    // Performance optimizations - File handling
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/venv311": false,
        "**/.venv": false
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "**/venv/**": true,
        "**/venv311/**": true,
        "**/__pycache__/**": true,
        "**/.pytest_cache/**": true,
        "**/htmlcov/**": true,
        "**/archive_*/**": true
    },
    // Performance optimizations - Search
    "search.exclude": {
        "**/venv311": false,
        "**/.venv": false,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/htmlcov": true,
        "**/archive_*": true,
        "**/*.pyc": true
    },
    // Python analysis optimizations
    "python.analysis.extraPaths": [
        ".",
        "src"
    ],
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.indexing": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.packageIndexDepths": [
        {
            "name": "kortana",
            "depth": 3
        }
    ],
    // Testing configuration
    "python.testing.pytestEnabled": true,
    "python.testing.pytestPath": "pytest",
    "python.testing.pytestArgs": [
        "tests",
        "--tb=short",
        "-v"
    ],
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "python.testing.unittestEnabled": false,
    // AI-Powered Development with GitHub Copilot
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": false,
        "markdown": true,
        "python": true,
        "json": true,
        "jsonc": true
    },
    "github.copilot.advanced": {},
    "github.copilot.chat.enabled": true,
    "github.copilot.chat.welcomeMessage": "auto",
    // Intelligent Code Completion & Suggestions
    "editor.inlineSuggest.enabled": true,
    "editor.inlineSuggest.showToolbar": "always",
    "editor.suggest.preview": true,
    "editor.suggest.showInlineDetails": true,
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "on",
    "editor.wordBasedSuggestions": "matchingDocuments",
    "editor.parameterHints.enabled": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.lightbulb.enabled": "onCode",
    "editor.quickSuggestions": {
        "other": "on",
        "comments": "off",
        "strings": "on"
    },
    "editor.quickSuggestionsDelay": 10,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    // Code Actions & Auto-formatting for Autonomous Development
    "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "explicit",
        "source.organizeImports.ruff": "explicit"
    },
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },
    // Python-Specific AI Enhancements
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.ruffEnabled": true,
    "python.formatting.provider": "none",
    "python.sortImports.args": [
        "--profile",
        "black"
    ],
    // Autonomous Error Detection & Quick Fixes
    "problems.showCurrentInStatus": true,
    "problems.sortOrder": "severity",
    // Intelligent File Management
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolPath": "on",
    // Enhanced Terminal for Development Automation
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.rightClickBehavior": "paste",
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    // Workspace Intelligence
    "workbench.startupEditor": "none",
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.highlightModifiedTabs": true,
    // Git Integration for Autonomous Development
    "git.enableSmartCommit": true,
    "git.autofetch": "all",
    "git.confirmSync": false,
    "git.enableCommitSigning": false,
    "git.decorations.enabled": false,
    "scm.defaultViewMode": "tree",
    // Performance & Memory optimizations
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "telemetry.telemetryLevel": "off",
    "workbench.enableExperiments": false,
    "workbench.settings.enableNaturalLanguageSearch": false,
    // Environment
    "python.envFile": "${workspaceFolder}/.env"
}
