{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Current File with venv311",
            "type": "shell",
            "command": "C:\\project-kortana\\venv311\\Scripts\\python.exe",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/src"
                }
            }
        },
        {
            "label": "Activate venv311 Environment",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/k",
                "C:\\project-kortana\\venv311\\Scripts\\activate.bat"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "C:\\project-kortana"
            }
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pytest",
                "-v",
                "--cov=src",
                "--cov-report=html:htmlcov",
                "--cov-report=xml",
                "--cov-report=term-missing"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$python"],
            "detail": "Run pytest with comprehensive coverage reporting"
